{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://gitlab.com/synchronicity-iot/synchronicity-data-models/raw/master/GreenEnergy/GreenEnergyGenerator/schema.json",
  "title": "SynchroniCity - GreenEnergyGenerator schema",
  "description": "A generic generator station which can generate energy from green energy",
  "type": "object",
  "allOf": [
    { "$ref": "https://fiware.github.io/dataModels/common-schema.json#/definitions/GSMA-Commons" },
    { "$ref": "https://fiware.github.io/dataModels/common-schema.json#/definitions/Location-Commons" },
    {
      "properties": {
        "type": {
          "type": "string",
          "value": "GreenEnergyGenerator",
          "description": "NGSI Entity type"
        },
        "status":{
          "type":"string",
          "enum": [
            "working",
            "outOfService",
            "withIncidence"
          ]
        },
        "selfConsumption":{
          "type":"boolean"
        },
        "redistribution":{
          "type":"boolean"
        },
        "generationSources": {
          "type":"array",
          "minItems": 1,
          "uniqueItems": true,
          "items":{
            "type":"string",
            "enum":[
              "solar",
              "eolic",
              "hydropower",
              "biomass",
              "geothermal"
            ]
          }
        },
        "maxSolarPowerMeasure": {
          "type": "number"
        },
        "maxEolicPowerMeasure": {
          "type": "number"
        },
        "maxHydroPowerMeasure": {
          "type": "number"
        },
        "maxBiomassMeasure": {
          "type": "number"
        }
      }
    }
  ],
  "required": [
    "id",
    "type",
    "location",
    "generationSources"
  ]
}
