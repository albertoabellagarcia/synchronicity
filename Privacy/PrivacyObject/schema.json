{
  "$schema": "http://json-schema.org/schema#",
  "$id": "Privacy/PrivacyObject/schema.json",
  "title": "SynchroniCity - Privacy / Privacy Object",
  "description": "Information about privacy for an IoT device",
  "type": "object",
  "allOf": [
    {
      "$ref": "https://fiware.github.io/data-models/common-schema.json#/definitions/GSMA-Commons"
    },
    {
      "$ref": "https://fiware.github.io/data-models/common-schema.json#/definitions/Location-Commons"
    },
    {
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "PrivacyObject"
          ]
        },
        "refDevice": {
          "$ref": "https://fiware.github.io/dataModels/common-schema.json#/definitions/EntityIdentifierType"
        },
        "name": {
          "type": "string"
        },
        "isIndoor": {
          "type": "boolean"
        },
        "floor": {
          "type": "number"
        },
        "description": {
          "type": "string"
        },
        "user": {
          "type": "string",
          "format": "uri"
        },
        "purpose": {
          "type": "string"
        },
        "category": {
          "type": "string"
        },
        "recipientList": {
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "owner": {
          "type": "string"
        },
        "isPersonalData": {
          "type": "boolean"
        },
        "retentionPeriod": {
          "type": "string"
        },
        "legitimateInterest": {
          "type": "string"
        },
        "crossborderTransfer": {
          "type": "string"
        },
        "image": {
          "type": "string",
          "format": "uri"
        }
      }
    }
  ],
  "required": [
    "id",
    "type"
  ]
}
