{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://gitlab.com/synchronicity-iot/synchronicity-data-models/raw/master/Transportation/RestrictedTrafficArea/schema.json",
  "title": "SynchroniCity - Transportation / RestrictedTrafficArea",
  "description": "An area of a city in which the traffic generated by cars or any other kind of vehicles is subjected to limitation",
  "type": "object",
  "required": [
      "id",
      "type",
      "category",
      "name",
      "notAllowedVehicleType"
  ],
  "anyOf": [
      {
        "required": [
            "location"
        ]
      },
      {
        "required": [
            "address"
        ]
      }
  ],
  "allOf": [
      {
        "$ref": "https://fiware.github.io/dataModels/common-schema.json#/definitions/GSMA-Commons"
      },
      {
        "$ref": "https://fiware.github.io/dataModels/common-schema.json#/definitions/Location-Commons"
      },
      {
        "properties": {
            "type": {
              "type": "string",
              "enum": [
                  "RestrictedTrafficArea"
              ],
              "description": "NGSI Entity type"
            },
            "category": {
              "type": "array",
              "items": {
                  "type": "string"
              },
              "minItems": 1,
              "uniqueItems": true
            },
            "notAllowedVehicleType": {
              "type": "array",
              "items": {
                  "type": "string"
              },
              "minItems": 1,
              "uniqueItems": true
            },
            "specialRestrictions": {
              "type": "array",
              "items": {
                  "$ref": "https://fiware.github.io/dataModels/common-schema.json#/definitions/EntityIdentifierType"
              }
            },
            "restrictionExceptions": {
              "type": "array",
              "items": {
                  "$ref": "https://fiware.github.io/dataModels/common-schema.json#/definitions/EntityIdentifierType"
              }
            },
            "restrictionValidityHours": {
              "type": "string"
            },
            "regulation": {
              "type": "string"
            },
            "validityStartDate": {
              "type": "string",
              "format": "date-time"
            },
            "validityEndDate": {
              "type": "string",
              "format": "date-time"
            },
            "security": {
              "type": "array",
              "items": {
                  "type": "string"
              },
              "minItems": 1,
              "uniqueItems": true
            }
        }
      }
  ]
}